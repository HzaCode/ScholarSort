{
  "manifest_version": 3,
  "name": "ScholarSort",
  "version": "1.0.0",
  "description": "A Chrome extension designed to enhance Google Scholar with advanced filtering capabilities and journal impact factor display",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://scholar.google.com/*",
        "*://scholar.google.cn/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "journal_data_top1000.js",
        "journal_data_full.js",
        "journal_data_top5000.js", 
        "journal_data_top500.js",
        "logo.jpg"
      ],
      "matches": [
        "*://scholar.google.com/*",
        "*://scholar.google.cn/*"
      ]
    }
  ],
  
  "icons": {
    "16": "logo.jpg",
    "48": "logo.jpg", 
    "128": "logo.jpg"
  }
}